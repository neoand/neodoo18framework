<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="template_model_view_list" model="ir.ui.view">
        <field name="name">template.model.view.list</field>
        <field name="model">template.model</field>
        <field name="arch" type="xml">
            <list string="Template Model">
                <field name="name"/>
                <field name="active"/>
                <field name="display_name"/>
            </list>
        </field>
    </record>

    <record id="template_model_view_form" model="ir.ui.view">
        <field name="name">template.model.view.form</field>
        <field name="model">template.model</field>
        <field name="arch" type="xml">
            <form string="Template Model">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_template_model" model="ir.actions.act_window">
        <field name="name">Template Model</field>
        <field name="res_model">template.model</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
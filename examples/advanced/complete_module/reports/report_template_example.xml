<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    ============================================================================
    TEMPLATE QWEB GENÉRICO - GUIA COMPLETO - ODOO 18
    ============================================================================

    Este arquivo demonstra todos os recursos principais de templates QWeb:
    - Diferentes tipos de layouts
    - Diretivas QWeb (t-foreach, t-if, t-esc, t-field, etc)
    - Formatação de dados (datas, números, moeda)
    - Uso de imagens e logos
    - CSS inline e classes Bootstrap
    - Boas práticas e exemplos comentados

    ============================================================================
    -->

    <!--
    ============================================================================
    1. LAYOUTS DISPONÍVEIS NO ODOO
    ============================================================================
    -->

    <!--
    Layout 1: External Layout Standard
    Layout padrão com header e footer da empresa
    -->
    <template id="example_external_layout_standard">
        <t t-call="web.external_layout">
            <div class="page">
                <h1>Conteúdo com Layout Externo Padrão</h1>
                <p>Este layout inclui automaticamente o cabeçalho e rodapé da empresa.</p>
            </div>
        </t>
    </template>

    <!--
    Layout 2: External Layout Clean
    Layout minimalista sem decorações
    -->
    <template id="example_external_layout_clean">
        <t t-call="web.external_layout_clean">
            <div class="page">
                <h1>Conteúdo com Layout Limpo</h1>
                <p>Layout minimalista ideal para documentos internos.</p>
            </div>
        </t>
    </template>

    <!--
    Layout 3: External Layout Boxed
    Layout com borda ao redor do conteúdo
    -->
    <template id="example_external_layout_boxed">
        <t t-call="web.external_layout_boxed">
            <div class="page">
                <h1>Conteúdo com Layout Emoldurado</h1>
                <p>Layout com borda decorativa.</p>
            </div>
        </t>
    </template>

    <!--
    Layout 4: Basic Layout (sem header/footer)
    Para total controle do layout
    -->
    <template id="example_basic_layout">
        <t t-call="web.basic_layout">
            <div class="page">
                <h1>Layout Básico</h1>
                <p>Sem cabeçalho ou rodapé automático. Total controle.</p>
            </div>
        </t>
    </template>

    <!--
    Layout 5: HTML Container (para relatórios HTML não-PDF)
    -->
    <template id="example_html_container">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <div class="page">
                    <h1>Relatório HTML Interativo</h1>
                    <p>Pode incluir JavaScript e interatividade.</p>
                </div>
            </t>
        </t>
    </template>

    <!--
    ============================================================================
    2. DIRETIVAS QWEB - CONTROLE DE FLUXO
    ============================================================================
    -->

    <template id="example_qweb_directives">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Exemplos de Diretivas QWeb</h2>

                <!--
                t-if: Renderiza condicionalmente
                -->
                <div class="section">
                    <h4>1. Diretiva t-if (Condicional)</h4>

                    <!-- Exemplo básico -->
                    <t t-if="doc.state == 'draft'">
                        <div class="alert alert-warning">
                            Este documento está em rascunho.
                        </div>
                    </t>

                    <!-- Exemplo com t-elif e t-else -->
                    <t t-if="doc.amount_total > 10000">
                        <p style="color: green;">Pedido de alto valor!</p>
                    </t>
                    <t t-elif="doc.amount_total > 5000">
                        <p style="color: orange;">Pedido de valor médio.</p>
                    </t>
                    <t t-else="">
                        <p style="color: blue;">Pedido padrão.</p>
                    </t>

                    <!-- Múltiplas condições -->
                    <t t-if="doc.partner_id and doc.partner_id.country_id">
                        <p>Cliente internacional: <span t-field="doc.partner_id.country_id.name"/></p>
                    </t>

                    <!-- Verificação de existência -->
                    <t t-if="doc.note">
                        <div class="mt-3">
                            <strong>Observações:</strong>
                            <p t-field="doc.note"/>
                        </div>
                    </t>
                </div>

                <!--
                t-foreach: Loop sobre coleções
                -->
                <div class="section mt-4">
                    <h4>2. Diretiva t-foreach (Loop)</h4>

                    <!-- Loop básico -->
                    <ul>
                        <t t-foreach="doc.order_line" t-as="line">
                            <li>
                                <span t-field="line.product_id.name"/> -
                                Qtd: <span t-field="line.product_uom_qty"/>
                            </li>
                        </t>
                    </ul>

                    <!-- Loop com índice e variáveis especiais -->
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Produto</th>
                                <th>Status</th>
                                <th>Info Loop</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.order_line" t-as="line">
                                <tr>
                                    <!-- line_index: índice baseado em 0 -->
                                    <td><span t-esc="line_index + 1"/></td>

                                    <!-- Variável do loop -->
                                    <td><span t-field="line.product_id.name"/></td>

                                    <!-- line_first: True se é o primeiro item -->
                                    <td>
                                        <t t-if="line_first">
                                            <span class="badge badge-primary">Primeiro</span>
                                        </t>
                                        <!-- line_last: True se é o último item -->
                                        <t t-elif="line_last">
                                            <span class="badge badge-success">Último</span>
                                        </t>
                                        <t t-else="">
                                            <span class="badge badge-secondary">Item <t t-esc="line_index + 1"/></span>
                                        </t>
                                    </td>

                                    <!-- Informações do loop -->
                                    <td>
                                        <!-- line_size: total de itens -->
                                        Total: <span t-esc="line_size"/>
                                        <!-- line_parity: 'odd' ou 'even' -->
                                        | Paridade: <span t-esc="line_parity"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Loop com range -->
                    <p>Números de 1 a 5:</p>
                    <t t-foreach="range(1, 6)" t-as="number">
                        <span t-esc="number"/><t t-if="not number_last">, </t>
                    </t>

                    <!-- Loop sobre dicionário -->
                    <t t-set="status_dict" t-value="{'draft': 'Rascunho', 'sent': 'Enviado', 'sale': 'Confirmado'}"/>
                    <ul>
                        <t t-foreach="status_dict.items()" t-as="item">
                            <li>
                                Chave: <t t-esc="item[0]"/> -
                                Valor: <t t-esc="item[1]"/>
                            </li>
                        </t>
                    </ul>
                </div>

                <!--
                t-set: Definir variáveis
                -->
                <div class="section mt-4">
                    <h4>3. Diretiva t-set (Variáveis)</h4>

                    <!-- Variável simples -->
                    <t t-set="company_name" t-value="doc.company_id.name"/>
                    <p>Empresa: <span t-esc="company_name"/></p>

                    <!-- Variável com cálculo -->
                    <t t-set="total_items" t-value="len(doc.order_line)"/>
                    <p>Total de itens: <span t-esc="total_items"/></p>

                    <!-- Variável com expressão complexa -->
                    <t t-set="total_qty" t-value="sum(line.product_uom_qty for line in doc.order_line)"/>
                    <p>Quantidade total: <span t-esc="total_qty"/></p>

                    <!-- Variável booleana -->
                    <t t-set="has_discount" t-value="any(line.discount > 0 for line in doc.order_line)"/>
                    <t t-if="has_discount">
                        <div class="alert alert-info">
                            Este pedido contém itens com desconto.
                        </div>
                    </t>

                    <!-- Variável com conteúdo HTML (body) -->
                    <t t-set="custom_message">
                        <div class="alert alert-success">
                            <strong>Mensagem personalizada:</strong>
                            Este conteúdo é definido como HTML.
                        </div>
                    </t>
                    <t t-raw="custom_message"/>
                </div>

                <!--
                t-esc vs t-field vs t-raw
                -->
                <div class="section mt-4">
                    <h4>4. t-esc vs t-field vs t-raw</h4>

                    <!-- t-esc: Escapa HTML, mostra texto puro -->
                    <p>
                        <strong>t-esc (texto escapado):</strong>
                        <span t-esc="doc.name"/>
                    </p>

                    <!-- t-field: Formata baseado no tipo do campo -->
                    <p>
                        <strong>t-field (formatação automática):</strong>
                        <span t-field="doc.date_order"/>
                    </p>

                    <!-- t-raw: Renderiza HTML sem escapar -->
                    <t t-set="html_content" t-value="'&lt;b&gt;Texto em negrito&lt;/b&gt;'"/>
                    <p>
                        <strong>t-raw (HTML não escapado):</strong>
                        <span t-raw="html_content"/>
                    </p>

                    <!-- Comparação lado a lado -->
                    <t t-set="test_text" t-value="'&lt;script&gt;alert(1)&lt;/script&gt;'"/>
                    <div class="row">
                        <div class="col-6">
                            <strong>Com t-esc (seguro):</strong><br/>
                            <span t-esc="test_text"/>
                        </div>
                        <div class="col-6">
                            <strong>Com t-raw (perigoso):</strong><br/>
                            <span t-raw="test_text"/>
                        </div>
                    </div>
                </div>

                <!--
                t-att: Atributos dinâmicos
                -->
                <div class="section mt-4">
                    <h4>5. Diretiva t-att (Atributos Dinâmicos)</h4>

                    <!-- Atributo único -->
                    <div t-att-class="'alert alert-' + ('success' if doc.state == 'sale' else 'warning')">
                        Status dinâmico baseado no estado.
                    </div>

                    <!-- Múltiplos atributos -->
                    <div t-att-class="'badge badge-primary'"
                         t-att-title="'Pedido: ' + doc.name"
                         t-att-data-id="doc.id">
                        Passe o mouse para ver o tooltip
                    </div>

                    <!-- Atributo style dinâmico -->
                    <div t-att-style="'color: ' + ('green' if doc.amount_total > 1000 else 'red') + ';'">
                        Total: <span t-field="doc.amount_total"/>
                    </div>

                    <!-- src de imagem dinâmico -->
                    <img t-att-src="'/web/image/res.company/' + str(doc.company_id.id) + '/logo'"
                         alt="Company Logo"
                         style="max-width: 100px;"/>
                </div>

                <!--
                t-call: Chamar sub-templates
                -->
                <div class="section mt-4">
                    <h4>6. Diretiva t-call (Sub-templates)</h4>

                    <!-- Definir um sub-template -->
                    <t t-set="product_badge">
                        <span class="badge badge-info">
                            <t t-esc="product_name"/>
                        </span>
                    </t>

                    <!-- Usar o sub-template -->
                    <t t-foreach="doc.order_line[:3]" t-as="line">
                        <t t-set="product_name" t-value="line.product_id.name"/>
                        <t t-raw="product_badge"/>
                    </t>
                </div>

            </div>
        </t>
    </template>

    <!--
    ============================================================================
    3. FORMATAÇÃO DE DADOS
    ============================================================================
    -->

    <template id="example_data_formatting">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Formatação de Dados</h2>

                <!--
                FORMATAÇÃO DE DATAS
                -->
                <div class="section">
                    <h4>1. Datas e Horários</h4>

                    <!-- Data padrão -->
                    <p>
                        <strong>Data padrão:</strong>
                        <span t-field="doc.date_order"/>
                    </p>

                    <!-- Data com widget -->
                    <p>
                        <strong>Somente data:</strong>
                        <span t-field="doc.date_order" t-options='{"widget": "date"}'/>
                    </p>

                    <!-- Data e hora -->
                    <p>
                        <strong>Data e hora:</strong>
                        <span t-field="doc.date_order" t-options='{"widget": "datetime"}'/>
                    </p>

                    <!-- Formato personalizado -->
                    <p>
                        <strong>Formato personalizado:</strong>
                        <span t-esc="doc.date_order.strftime('%d/%m/%Y')" t-if="doc.date_order"/>
                    </p>

                    <!-- Data relativa -->
                    <p>
                        <strong>Data relativa:</strong>
                        <span t-field="doc.date_order" t-options='{"widget": "relative"}'/>
                    </p>

                    <!-- Data atual -->
                    <p>
                        <strong>Data/Hora atual:</strong>
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d/%m/%Y %H:%M:%S')"/>
                    </p>

                    <!-- Diferença de datas -->
                    <t t-set="days_old" t-value="(datetime.datetime.now().date() - doc.date_order.date()).days" t-if="doc.date_order"/>
                    <p>
                        <strong>Dias desde criação:</strong>
                        <span t-esc="days_old"/> dias
                    </p>
                </div>

                <!--
                FORMATAÇÃO DE NÚMEROS
                -->
                <div class="section mt-4">
                    <h4>2. Números e Valores</h4>

                    <!-- Número inteiro -->
                    <p>
                        <strong>Número inteiro:</strong>
                        <span t-esc="len(doc.order_line)"/>
                    </p>

                    <!-- Número decimal -->
                    <p>
                        <strong>Decimal (2 casas):</strong>
                        <span t-esc="'%.2f' % doc.amount_total"/>
                    </p>

                    <!-- Número com separador de milhares -->
                    <p>
                        <strong>Com separador:</strong>
                        <span t-esc="'{:,.2f}'.format(doc.amount_total)"/>
                    </p>

                    <!-- Percentual -->
                    <t t-set="discount_pct" t-value="15.5"/>
                    <p>
                        <strong>Percentual:</strong>
                        <span t-esc="'%.1f%%' % discount_pct"/>
                    </p>

                    <!-- Arredondamento -->
                    <t t-set="value" t-value="123.456"/>
                    <p>
                        <strong>Arredondado:</strong>
                        <span t-esc="round(value, 2)"/>
                    </p>
                </div>

                <!--
                FORMATAÇÃO DE MOEDA
                -->
                <div class="section mt-4">
                    <h4>3. Valores Monetários</h4>

                    <!-- Moeda padrão com widget -->
                    <p>
                        <strong>Widget monetary:</strong>
                        <span t-field="doc.amount_total"
                              t-options='{"widget": "monetary", "display_currency": doc.currency_id}'/>
                    </p>

                    <!-- Moeda com símbolo antes -->
                    <p>
                        <strong>Símbolo antes:</strong>
                        <span t-esc="doc.currency_id.symbol"/>
                        <span t-esc="'{:,.2f}'.format(doc.amount_total)"/>
                    </p>

                    <!-- Moeda com código ISO -->
                    <p>
                        <strong>Com código ISO:</strong>
                        <span t-esc="'{:,.2f}'.format(doc.amount_total)"/>
                        <span t-esc="doc.currency_id.name"/>
                    </p>

                    <!-- Formatação por extenso (requer módulo adicional) -->
                    <p>
                        <strong>Valor formatado:</strong>
                        <span t-field="doc.amount_total"
                              t-options='{"widget": "monetary", "display_currency": doc.currency_id, "precision": 2}'/>
                    </p>
                </div>

                <!--
                FORMATAÇÃO DE TEXTO
                -->
                <div class="section mt-4">
                    <h4>4. Texto e Strings</h4>

                    <!-- Maiúsculas/Minúsculas -->
                    <p>
                        <strong>MAIÚSCULAS:</strong>
                        <span t-esc="doc.name.upper()"/>
                    </p>
                    <p>
                        <strong>minúsculas:</strong>
                        <span t-esc="doc.name.lower()"/>
                    </p>
                    <p>
                        <strong>Capitalize:</strong>
                        <span t-esc="doc.name.title()"/>
                    </p>

                    <!-- Truncar texto -->
                    <t t-set="long_text" t-value="'Este é um texto muito longo que precisa ser truncado'"/>
                    <p>
                        <strong>Truncado (20 chars):</strong>
                        <span t-esc="long_text[:20] + '...' if len(long_text) > 20 else long_text"/>
                    </p>

                    <!-- Substituir texto -->
                    <p>
                        <strong>Replace:</strong>
                        <span t-esc="doc.name.replace('/', '-')"/>
                    </p>

                    <!-- Remover espaços -->
                    <p>
                        <strong>Trim:</strong>
                        '<span t-esc="'  texto  '.strip()"/>'
                    </p>

                    <!-- Concatenação -->
                    <p>
                        <strong>Concatenado:</strong>
                        <span t-esc="doc.name + ' - ' + doc.partner_id.name"/>
                    </p>

                    <!-- Split e join -->
                    <t t-set="parts" t-value="doc.name.split('/')"/>
                    <p>
                        <strong>Parts:</strong>
                        <span t-esc="' | '.join(parts)"/>
                    </p>
                </div>

                <!--
                FORMATAÇÃO DE BOOLEANOS
                -->
                <div class="section mt-4">
                    <h4>5. Valores Booleanos</h4>

                    <!-- Checkbox visual -->
                    <p>
                        <strong>Checkbox:</strong>
                        <t t-if="doc.state == 'sale'">
                            <span style="color: green;">✓</span>
                        </t>
                        <t t-else="">
                            <span style="color: red;">✗</span>
                        </t>
                    </p>

                    <!-- Badge sim/não -->
                    <p>
                        <strong>Badge:</strong>
                        <span t-att-class="'badge badge-' + ('success' if doc.state == 'sale' else 'danger')">
                            <t t-if="doc.state == 'sale'">Sim</t>
                            <t t-else="">Não</t>
                        </span>
                    </p>

                    <!-- Ícone -->
                    <p>
                        <strong>Ícone:</strong>
                        <i t-att-class="'fa fa-' + ('check-circle text-success' if doc.state == 'sale' else 'times-circle text-danger')"/>
                    </p>
                </div>

            </div>
        </t>
    </template>

    <!--
    ============================================================================
    4. IMAGENS E RECURSOS VISUAIS

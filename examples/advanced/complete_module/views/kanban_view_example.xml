<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--
    =============================================================================
    KANBAN VIEW EXAMPLE FOR ODOO 18
    =============================================================================

    This file demonstrates all kanban view features available in Odoo 18:
    - Card layout and styling
    - Dropdown menus
    - Progress bars
    - Quick create
    - Drag and drop
    - Group by states
    =============================================================================
    -->

    <!-- ========================================= -->
    <!-- BASIC KANBAN VIEW -->
    <!-- ========================================= -->

    <record id="view_project_kanban_basic" model="ir.ui.view">
        <field name="name">project.project.kanban.basic</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <kanban string="Projects" class="o_kanban_small_column">

                <!-- Card definition -->
                <field name="id"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="state"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="o_kanban_record_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_body">
                                    <field name="partner_id"/>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>

    <!-- ========================================= -->
    <!-- ADVANCED KANBAN VIEW -->
    <!-- ========================================= -->

    <record id="view_project_kanban_advanced" model="ir.ui.view">
        <field name="name">project.project.kanban.advanced</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <kanban
                string="Projects"
                class="o_kanban_small_column o_kanban_project_tasks"
                default_group_by="state"
                quick_create="1"
                quick_create_view="view_project_kanban_quick_create"
                sample="1"
                on_create="quick_create"
                records_draggable="1"
                group_create="1"
                group_delete="1"
                group_edit="1"
                archivable="1"
                default_order="priority desc, date_start desc">

                <!-- Fields needed in kanban (must be declared) -->
                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="date_start"/>
                <field name="date_deadline"/>
                <field name="progress"/>
                <field name="is_overdue"/>
                <field name="tag_ids"/>
                <field name="color"/>
                <field name="active"/>
                <field name="activity_ids"/>
                <field name="activity_state"/>

                <!-- Progress bar (shown in column headers when grouped by state) -->
                <progressbar
                    field="activity_state"
                    colors='{"planned": "success", "today": "warning", "overdue": "danger"}'
                    sum_field="progress"/>

                <!-- Card templates -->
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? 'oe_kanban_color_' + kanban_getcolor(record.color.raw_value) : ''} oe_kanban_card oe_kanban_global_click">

                            <!-- Color ribbon -->
                            <div class="o_dropdown_kanban dropdown">
                                <a role="button" class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" type="edit" class="dropdown-item">Edit</a>
                                    <a role="menuitem" type="delete" class="dropdown-item">Delete</a>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>

                            <!-- Kanban card content -->
                            <div class="oe_kanban_content">
                                <!-- Top section: Priority and title -->
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle text-muted">
                                            <field name="code"/>
                                            <t t-if="record.partner_id.value">
                                                - <field name="partner_id"/>
                                            </t>
                                        </div>
                                    </div>
                                    <div class="o_dropdown_kanban dropdown">
                                        <a role="button" class="dropdown-toggle o-no-caret btn" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                            <span class="fa fa-ellipsis-v"/>
                                        </a>
                                        <div class="dropdown-menu" role="menu">
                                            <t t-if="widget.editable">
                                                <a type="edit" role="menuitem" class="dropdown-item">Edit</a>
                                            </t>
                                            <t t-if="widget.deletable">
                                                <a type="delete" role="menuitem" class="dropdown-item">Delete</a>
                                            </t>
                                            <div role="separator" class="dropdown-divider"/>
                                            <ul class="oe_kanban_colorpicker" data-field="color"/>
                                        </div>
                                    </div>
                                </div>

                                <!-- Body: Tags and dates -->
                                <div class="o_kanban_record_body">
                                    <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>

                                    <div class="text-muted mt-2">
                                        <t t-if="record.date_start.raw_value">
                                            <i class="fa fa-calendar" title="Start Date"/>
                                            <t t-esc="record.date_start.value"/>
                                        </t>
                                        <t t-if="record.date_deadline.raw_value">
                                            <t t-if="record.date_start.raw_value"> â†’ </t>
                                            <i class="fa fa-flag" title="Deadline" t-attf-class="#{record.is_overdue.raw_value ? 'text-danger' : ''}"/>
                                            <span t-attf-class="#{record.is_overdue.raw_value ? 'text-danger' : ''}">
                                                <t t-esc="record.date_deadline.value"/>
                                            </span>
                                        </t>
                                    </div>

                                    <!-- Progress bar -->
                                    <div class="mt-2">
                                        <field name="progress" widget="progressbar"/>
                                    </div>
                                </div>

                                <!-- Footer: Avatar and priority -->
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <field name="priority" widget="priority"/>
                                        <field name="activity_ids" widget="kanban_activity"/>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>

                            <!-- Badges (shown on hover or always) -->
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <!-- Activity indicator -->
                                        <t t-if="record.activity_state.raw_value === 'overdue'">
                                            <span class="badge rounded-pill text-bg-danger">Overdue Activities</span>
                                        </t>
                                        <t t-if="record.activity_state.raw_value === 'today'">
                                            <span class="badge rounded-pill text-bg-warning">Activities Today</span>
                                        </t>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>

    <!-- ========================================= -->
    <!-- KANBAN QUICK CREATE FORM -->
    <!-- ========================================= -->

    <record id="view_project_kanban_quick_create" model="ir.ui.view">
        <field name="name">project.project.kanban.quick.create</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" placeholder="Project Name"/>
                    <field name="partner_id" placeholder="Customer"/>
                    <field name="user_id" placeholder="Project Manager"/>
                </group>
            </form>
        </field>
    </record>

    <!-- ========================================= -->
    <!-- GROUPED KANBAN WITH CUSTOM STYLING -->
    <!-- ========================================= -->

    <record id="view_project_kanban_custom" model="ir.ui.view">
        <field name="name">project.project.kanban.custom</field>
        <field name="model">project.project</field>
        <field name="priority">20</field>
        <field name="arch" type="xml">
            <kanban
                string="Projects by Customer"
                class="o_kanban_mobile o_kanban_small_column"
                default_group_by="partner_id"
                sample="1">

                <field name="id"/>
                <field name="name"/>
                <field name="code"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="state"/>
                <field name="color"/>
                <field name="amount_total"/>
                <field name="currency_id"/>

                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click o_kanban_record_has_image_fill">

                            <!-- Background color based on state -->
                            <div class="o_kanban_image" t-attf-style="background-color: #{record.state.raw_value === 'done' ? '#28a745' : '#17a2b8'}">
                                <div class="o_kanban_image_fill_left d-none d-md-block" style="background-size: cover;">
                                    <img class="img img-fluid" alt="Logo" t-att-src="kanban_image('res.partner', 'image_128', record.partner_id.raw_value)"/>
                                </div>
                            </div>

                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            [<t t-esc="record.code.value"/>] <t t-esc="record.name.value"/>
                                        </strong>
                                    </div>
                                </div>

                                <div class="o_kanban_record_body">
                                    <field name="partner_id"/>
                                </div>

                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span class="badge rounded-pill text-bg-secondary">
                                            <field name="amount_total" widget="monetary"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>

    <!-- ========================================= -->
    <!-- MOBILE OPTIMIZED KANBAN -->
    <!-- ========================================= -->

    <record id="view_project_kanban_mobile" model="ir.ui.view">
        <field name="name">project.project.kanban.mobile</field>
        <field name="model">project.project</field>
        <field name="priority">30</field>
        <field name="arch" type="xml">
            <kanban
                string="Projects (Mobile)"
                class="o_kanban_mobile"
                sample="1">

                <field name="id"/>
                <field name="name"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="state"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_content">
                                <!-- Mobile-optimized layout: vertical stack -->
                                <div class="row">
                                    <div class="col-10">
                                        <strong><field name="name"/></strong>
                                        <div class="text-muted">
                                            <field name="partner_id"/>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-12">
                                        <span class="badge rounded-pill text-bg-info">
                                            <field name="state"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>

            </kanban>
        </field>
    </record>

</odoo>

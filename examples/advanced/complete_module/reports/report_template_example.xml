    <template id="example_css_styles">
        <t t-call="web.external_layout">
            <!-- CSS inline no template -->
            <style>
                /* Estilos customizados para o relatório */

                .custom-header {
                    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                    color: white;
                    padding: 20px;
                    border-radius: 5px;
                }

                .custom-table {
                    border-collapse: collapse;
                    width: 100%;
                }

                .custom-table th {
                    background-color: #2c3e50;
                    color: white;
                    padding: 10px;
                    text-align: left;
                }

                .custom-table td {
                    padding: 8px;
                    border-bottom: 1px solid #ecf0f1;
                }

                .custom-table tr:hover {
                    background-color: #f8f9fa;
                }

                .highlight-box {
                    background-color: #fff3cd;
                    border-left: 4px solid #ffc107;
                    padding: 15px;
                    margin: 10px 0;
                }

                .status-badge {
                    display: inline-block;
                    padding: 5px 10px;
                    border-radius: 20px;
                    font-size: 12px;
                    font-weight: bold;
                }

                .status-draft {

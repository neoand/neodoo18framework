    <template id="example_images">
        <t t-call="web.external_layout">
            <div class="page">
                <h2>Imagens e Recursos Visuais</h2>

                <!--
                LOGO DA EMPRESA
                -->
                <div class="section">
                    <h4>1. Logo da Empresa</h4>

                    <!-- Método 1: image_data_uri (preferido) -->
                    <div class="mb-3">
                        <strong>Usando image_data_uri:</strong><br/>
                        <img t-if="doc.company_id.logo"
                             t-att-src="image_data_uri(doc.company_id.logo)"
                             alt="Company Logo"
                             style="max-height: 80px; border: 1px solid #ddd; padding: 5px;"/>
                    </div>

                    <!-- Método 2: URL web/image -->
                    <div class="mb-3">
                        <strong>Usando URL web/image:</strong><br/>
                        <img t-att-src="'/web/image/res.company/%s/logo' % doc.company_id.id"
                             alt="Company Logo"
                             style="max-height: 80px;"/>
                    </div>

                    <!-- Com verificação de existência -->
                    <div class="mb-3">
                        <t t-if="doc.company_id.logo">
                            <img t-att-src="image_data_uri(doc.company_id.logo)"
                                 style="max-height: 80px;"
                                 alt="Logo"/>
                        </t>
                        <t t-else="">
                            <div class="alert alert-warning">Logo não disponível</div>
                        </t>
                    </div>
                </div>

                <!--
                IMAGEM DE PRODUTO
                -->
                <div class="section mt-4">
                    <h4>2. Imagem de Produto</h4>

                    <t t-foreach="doc.order_line[:3]" t-as="line">
                        <div class="row mb-2">
                            <div class="col-2">
                                <!-- Imagem do produto -->
                                <img t-if="line.product_id.image_128"
                                     t-att-src="image_data_uri(line.product_id.image_128)"
                                     class="img-thumbnail"
                                     style="max-width: 64px;"
                                     t-att-alt="line.product_id.name"/>
                                <!-- Placeholder se não houver imagem -->
                                <t t-else="">
                                    <div class="bg-light text-center"
                                         style="width: 64px; height: 64px; line-height: 64px; border: 1px solid #ddd;">
                                        <i class="fa fa-picture-o" style="font-size: 24px; color: #aaa;"/>
                                    </div>
                                </t>
                            </div>
                            <div class="col-10">
                                <strong t-field="line.product_id.name"/><br/>
                                <small class="text-muted" t-field="line.product_id.default_code"/>
                            </div>
                        </div>
                    </t>
                </div>

                <!--
                CÓDIGOS DE BARRAS
                -->
                <div class="section mt-4">
                    <h4>3. Códigos de Barras</h4>

                    <!-- Barcode widget (requer módulo de barcode) -->
                    <div class="mb-3">
                        <strong>Barcode do pedido:</strong><br/>
                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', doc.name, 600, 100)"
                             style="width: 300px; height: 50px;"
                             alt="Barcode"/>
                    </div>

                    <!-- QR Code -->
                    <div class="mb-3">
                        <strong>QR Code:</strong><br/>
                        <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', doc.name, 200, 200)"
                             style="width: 100px; height: 100px;"
                             alt="QR Code"/>
                    </div>
                </div>

                <!--
                ASSINATURA
                -->
                <div class="section mt-4">
                    <h4>4. Assinatura Digital</h4>

                    <!-- Se usuário tiver assinatura -->
                    <t t-if="doc.user_id.partner_id.image_1920">
                        <div>
                            <strong>Assinado por:</strong>
                            <span t-field="doc.user_id.name"/><br/>
                            <img t-att-src="image_data_uri(doc.user_id.partner_id.image_1920)"
                                 style="max-height: 50px;"
                                 alt="Signature"/>
                        </div>
                    </t>
                </div>

                <!--
                ÍCONES E SÍMBOLOS
                -->
                <div class="section mt-4">
                    <h4>5. Ícones Font Awesome</h4>

                    <div class="row">
                        <div class="col-3">
                            <i class="fa fa-check-circle text-success" style="font-size: 24px;"/>
                            Aprovado
                        </div>
                        <div class="col-3">
                            <i class="fa fa-times-circle text-danger" style="font-size: 24px;"/>
                            Rejeitado
                        </div>
                        <div class="col-3">
                            <i class="fa fa-clock-o text-warning" style="font-size: 24px;"/>
                            Pendente
                        </div>
                        <div class="col-3">
                            <i class="fa fa-info-circle text-info" style="font-size: 24px;"/>
                            Informação
                        </div>
                    </div>
                </div>

            </div>
        </t>
    </template>

